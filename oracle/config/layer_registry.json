{
  "_version": "1.0",
  "_comment": "Layer definitions for pipeline - extracted from cortex.py LAYER_DEFINITIONS",
  "_note": "This file is project-specific and defines the content generation pipeline layers",

  "layers": {
    "L0": {
      "name": "Routing & Orchestration",
      "description": "Entry point, preset selection, workflow orchestration",
      "primary_script": "L0_routing.py",
      "tools": ["preset_manager", "workflow_selector"],
      "enabled": true
    },
    "L1": {
      "name": "Data Ingestion",
      "description": "External data sources, APIs, web search, file inputs",
      "primary_script": "L1_data.py",
      "tools": ["goatedbets_api", "web_search", "balldontlie", "local_assets", "perplexity"],
      "enabled": true
    },
    "L2": {
      "name": "Formatting & Discovery",
      "description": "Data formatting, trend discovery, context preparation",
      "primary_script": "L2_formatting.py",
      "tools": ["trend_detector", "context_builder", "data_formatter"],
      "enabled": true
    },
    "L3": {
      "name": "Script Generation",
      "description": "LLM-powered script/content generation",
      "primary_script": "L3_script.py",
      "tools": ["gemini", "perplexity", "gpt-4o-mini", "claude"],
      "enabled": true
    },
    "L4": {
      "name": "Audio Generation",
      "description": "Text-to-speech, audio processing",
      "primary_script": "L4_audio.py",
      "tools": ["elevenlabs", "openai_tts"],
      "enabled": true
    },
    "L5": {
      "name": "Media Generation",
      "description": "Image/video generation, stock media retrieval",
      "primary_script": "L5_media.py",
      "tools": ["imagen4", "flux_fal", "nano_banana", "pexels", "kling", "runway"],
      "enabled": true
    },
    "L6": {
      "name": "Assembly & Composition",
      "description": "Video assembly, overlays, final composition",
      "primary_script": "L6_assembly.py",
      "tools": ["ffmpeg", "pil_overlay", "carousel_assembly", "ken_burns", "reel_converter"],
      "enabled": true
    },
    "L7": {
      "name": "Distribution",
      "description": "Platform uploads, scheduling, publishing",
      "primary_script": "L7_distribution.py",
      "tools": ["instagram_api", "tiktok_api", "youtube_api"],
      "enabled": true
    },
    "L8": {
      "name": "Analytics & Feedback",
      "description": "Performance tracking, feedback loops",
      "primary_script": "L8_analytics.py",
      "tools": ["engagement_tracker", "performance_analyzer"],
      "enabled": true
    }
  },

  "layer_order": ["L0", "L1", "L2", "L3", "L4", "L5", "L6", "L7", "L8"],

  "custom_layers": {}
}
